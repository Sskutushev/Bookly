{
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors 'self' https://web.telegram.org;"
        }
      ]
    }
  ],
  "build": {
    "env": {
      "VITE_API_BASE_URL": "https://bookly-backend.vercel.app"
    }
  }
}
